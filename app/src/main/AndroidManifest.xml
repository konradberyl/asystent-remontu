<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.apps.asystentremontu">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.example.apps.asystentremontu.DBFlowApplication"
        android:allowBackup="true"
        android:icon="@mipmap/new_launcher_icon"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="DATABASE"
            android:value="sugar_book.db" />
        <meta-data
            android:name="VERSION"
            android:value="2" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.example.apps.asystentremontu" />

        <activity
            android:name="com.example.apps.asystentremontu.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.apps.asystentremontu.myhistory.actual_history.ActualHistoryActivity"
            android:screenOrientation="portrait"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>

        <activity
            android:name="com.example.apps.asystentremontu.myhistory.newelement.NewElementActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
             />
        <activity
            android:name="com.example.apps.asystentremontu.shopping_list.ShoppingListMainActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
             />
        <activity
            android:name=".calculator.CalculatorActivity"
            android:label="@string/title_activity_kalkulator"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.example.apps.asystentremontu.myhistory.MyHistoryMainClass"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>
