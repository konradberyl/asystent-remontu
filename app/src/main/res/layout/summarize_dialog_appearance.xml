<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/gray_custom_2"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/main_relative_in_summarize_dialog"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/simple_text_costs"
            android:text="koszt zakupów: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="koszt"
            android:layout_marginLeft="3dp"
            android:id="@+id/shopping_costs_in_summarize_dialog_tv"
            android:layout_toRightOf="@+id/simple_text_costs"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="zł"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/shopping_costs_in_summarize_dialog_tv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/simple_text_left_money"
            android:layout_below="@+id/simple_text_costs"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pozostałe..."
            android:textSize="20dp"
            android:layout_marginLeft="3dp"
            android:id="@+id/left_money_in_summarize_dialog_tv"
            android:layout_toRightOf="@+id/simple_text_left_money"
            android:layout_below="@+id/simple_text_costs"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_below="@+id/simple_text_costs"
            android:text="zł"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/left_money_in_summarize_dialog_tv"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/summarize_imageview"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/simple_text_left_money"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/main_relative_in_summarize_dialog"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/verdict_in_summarize_dialog_tv"
            android:text="WERDYKT"/>
    </RelativeLayout>


</RelativeLayout>